<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/amarelo"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="0dp"
        android:background="@color/amarelo"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="40sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="0dp"
        android:background="@color/amarelo"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/white"
        android:textSize="30sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:textColor="@color/marrom"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_limpar"
            style="@style/Operators_Button"
            android:textColor="@color/black"
            android:background="@color/marrom"
            android:layout_weight="2"
            android:text="C" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/resto"
            android:textColor="@color/black"
            android:background="@color/marrom"
            style="@style/Operators_Button"
            android:text="%" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/divisao"
            style="@style/Operators_Button"
            android:textColor="@color/black"
            android:background="@color/marrom"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:textColor="@color/black"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_sete"
            style="@style/Numbers_Button"
            android:textColor="@color/black"
            android:text="7" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_oito"
            style="@style/Numbers_Button"
            android:textColor="@color/black"
            android:text="8" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_nove"
            android:textColor="@color/black"
            style="@style/Numbers_Button"
            android:text="9" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/multiplicacao"
            style="@style/Operators_Button"
            android:textColor="@color/black"
            android:background="@color/marrom"
            android:text="X" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@color/marrom"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_quatro"
            style="@style/Numbers_Button"
            android:textColor="@color/black"
            android:text="4" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_cinco"
            style="@style/Numbers_Button"
            android:textColor="@color/black"
            android:text="5" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_seis"
            style="@style/Numbers_Button"
            android:textColor="@color/black"
            android:text="6" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/subtracao"
            android:textColor="@color/black"
            android:background="@color/marrom"
            style="@style/Operators_Button"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_um"
            style="@style/Numbers_Button"
            android:textColor="@color/black"
            android:text="1" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_dois"
            style="@style/Numbers_Button"
            android:textColor="@color/black"
            android:text="2" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_tres"
            android:textColor="@color/black"
            style="@style/Numbers_Button"
            android:text="3" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/adicao"
            android:textColor="@color/black"
            android:background="@color/marrom"
            style="@style/Operators_Button"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ponto"
            android:textColor="@color/black"
            style="@style/Numbers_Button"
            android:text="." />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/numero_zero"
            android:textColor="@color/black"
            style="@style/Numbers_Button"
            android:text="0" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backspace"
            style="@style/Numbers_Button"
            android:src="@drawable/backspace"
            android:scaleType="center"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/igual"
            android:textColor="@color/black"
            android:background="@color/marrom"
            style="@style/Operators_Button"
            android:text="=" />
    </LinearLayout>
</LinearLayout>
